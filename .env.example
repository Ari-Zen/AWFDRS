# Database
DATABASE_URL=postgresql+asyncpg://awfdrs:awfdrs@localhost:5432/awfdrs
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Configuration (ALWAYS MOCK - No real API calls)
AI_MODE=mock
OPENAI_API_KEY=mock-key-no-real-calls
PINECONE_API_KEY=mock-key-no-real-calls
AI_CONFIDENCE_THRESHOLD=0.7
# Note: AI clients will return deterministic mock responses, never call real APIs

# Auth (placeholder)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true
CORS_ORIGINS=["http://localhost:3000"]

# Safety Limits
MAX_RETRIES_PER_WORKFLOW=5
MAX_RETRIES_PER_VENDOR=100
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT_SECONDS=300

# Feature Flags
ENABLE_AI_DETECTION=false
ENABLE_AI_RCA=false
ENABLE_AUTO_RETRY=false
